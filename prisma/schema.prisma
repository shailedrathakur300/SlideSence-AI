generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  clerkId               String     @unique @db.Uuid
  name                  String
  email                 String     @unique
  profileImage          String?
  subscription          Boolean    @default(false)
  createdAt             DateTime   @default(now())
  updatedAt             DateTime   @updatedAt
  leamonsqueezyApiKey   String?
  storeId               String?
  webhookSecret         String?
  projects              Project[]  @relation("OwnedProjects")
  PurchasedProjecsts    Project[] @relation("PurchasedProjects")
}

model Project {
  id           String      @id @default(cuid())
  title        String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  slides       Json?
  userId       String      @db.Uuid
  outlines     String[]
  isDeleted    Boolean     @default(false)
  isSellable   Boolean     @default(false)
  variantId    String?
  thumbnail    String?
  themeName    String?     @default("light")

  user         User        @relation("OwnedProjects", fields: [userId], references: [id])
  Purchases    User[]      @relation("PurchasedProjects")
}